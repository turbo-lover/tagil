<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ECE8E2"
   >


    <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/composite_header_simple"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/include"/>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_below="@+id/include"
            android:layout_centerHorizontal="true">



        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/include">


            <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/composite_instruction"
                    android:id="@+id/header_incl"
                    android:layout_centerHorizontal="true"/>





            <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/composite_instruction_question"
                    android:id="@+id/include2"
                    android:layout_below="@+id/header_incl"
                    android:layout_alignLeft="@+id/header_incl"/>

            <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/composite_instruction_question"
                    android:id="@+id/faq_form"
                    android:layout_below="@+id/include2"
                    android:layout_alignLeft="@+id/include2"
                    android:layout_marginTop="15dp"/>
            <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/composite_instruction_question"
                    android:id="@+id/faq_form11"
                    android:layout_below="@+id/faq_form"
                    android:layout_alignLeft="@+id/include2"
                    android:layout_marginTop="15dp"/>



        </RelativeLayout>

    </ScrollView>

    <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/composite_first_button_nav"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>

</RelativeLayout>