<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ECE8E2"
   >

    <include
        android:id="@+id/tape_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/composite_header" />


    <ru.news.tagil.utility.myScrollView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="10dp"
            android:id="@+id/news_headers_scroller"
            android:layout_below="@id/tape_header"
            android:layout_alignBottom="@id/tape_first_nav">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/news_headers_content_holder"
                >
        </LinearLayout>
    </ru.news.tagil.utility.myScrollView>

    <include
            android:id="@+id/tape_first_nav"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            layout="@layout/composite_first_button_nav" />





</RelativeLayout>