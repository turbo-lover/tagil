<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ECE8E2"
   >

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bottom_border"
            android:layout_below="@+id/nav_buttons">


        <ImageView
                android:layout_width="150dp"
                android:layout_marginLeft="10dp"
                android:layout_height="150dp"

                android:id="@+id/composite_ads_imageView"
                />


        <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="fill_parent"
                android:layout_below="@+id/nav_buttons">


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"

                    android:textColor="#ff474747"
                    android:textSize="18dp"
                    android:singleLine="true"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/composite_ads_title"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"

                    android:textColor="#ff474747"
                    android:singleLine="true"
                    android:textSize="22dp"
                    android:layout_below="@+id/composite_ads_title"
                    android:id="@+id/composite_ads_name"/>

            <TextView
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"

                    android:layout_marginLeft="10dp"
                    android:textColor="#fffd8001"
                    android:textSize="18dp"
                    android:layout_below="@+id/composite_ads_name"
                    android:id="@+id/composite_ads_date"
                  />

            <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/star_button"
                    android:id="@+id/composite_ads_favorite"
                    android:layout_gravity="left|center_vertical"/>


        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>