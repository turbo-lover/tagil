<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ECE8E2"
   >



    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000">

            <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">


                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="10dp"
                        android:background="#ECE8E2"
                        android:id="@+id/linearLayout22">

                    <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ads_button_bg"
                            android:id="@+id/composite_contact_search_ava"
                            android:layout_gravity="center_horizontal|top"/>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|top">

                        <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#ff474747"
                                android:textSize="26dp"
                                android:text="Иван Бубуйло"
                                android:id="@+id/composite_contact_search_name"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="8dp"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#ff474747"
                                android:textSize="22dp"
                                android:text="32 года. Нижний Тагил"
                                android:id="@+id/composite_contact_search_info"/>

                        <Button
                                android:layout_width="300dp"
                                android:layout_height="36dp"
                                android:textSize="22dp"
                                android:layout_marginTop="12dp"
                                android:text="Сохранить"
                                android:textColor="#ffccc9c3"
                                android:background="@drawable/ads_button_bg"
                                android:id="@+id/composite_contact_search_save"
                                android:layout_gravity="left|center_vertical"/>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="32dp"
                        android:layout_below="@+id/linearLayout22"
                        android:layout_centerHorizontal="true"
                        android:background="#fffd8001"
                        android:id="@+id/linearLayout2">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="33dp">

                            <TextView
                                    android:layout_width="244dp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="           Все фотографии"

                                    android:textSize="18dp"
                                    android:layout_marginTop="0dp"
                                    android:textColor="#ff474747"
                                    android:id="@+id/composite_contact_search_all_photo"
                                    android:layout_gravity="center"/>

                        </LinearLayout>
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="33dp"
                                      android:background="#111">

                            <TextView
                                    android:layout_width="244dp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="  Добавить фотограффии"
                                    android:textSize="18dp"
                                    android:layout_marginTop="0dp"
                                    android:textColor="#fffd8001"
                                    android:id="@+id/composite_contact_search_add_photo"
                                    android:layout_gravity="center"/>
                        </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="130dp"
                        android:background="@drawable/contact_ley_bg"
                        android:layout_below="@+id/linearLayout2"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/linearLayout3">

        <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:id="@+id/horizontalScrollView"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/imageView3">

                    <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="120dp"
                            android:paddingTop="10dp">

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/ads_button_bg"
                                android:id="@+id/imageView2"
                                android:layout_gravity="left|center_vertical"/>

                        <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/ads_button_bg"
                                android:id="@+id/imageView3"
                                android:layout_gravity="center"/>

                        <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/ads_button_bg"
                                android:id="@+id/imageView4"
                                android:layout_gravity="center"/>

                        <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/ads_button_bg"
                                android:id="@+id/imageView5"
                                android:layout_gravity="center"/>

                        <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/ads_button_bg"
                                android:id="@+id/imageView5"
                                android:layout_gravity="center"/>

                        <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/ads_button_bg"
                                android:id="@+id/imageView5"
                                android:layout_gravity="center"/>

                        <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/ads_button_bg"
                                android:id="@+id/imageView5"
                                android:layout_gravity="center"/>

                        <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/ads_button_bg"
                                android:id="@+id/imageView5"
                                android:layout_gravity="center"/>


                    </LinearLayout>

                    </RelativeLayout>

        </HorizontalScrollView>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/contact_ley_bg"
                        android:layout_below="@+id/linearLayout3"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/linearLayout4">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp"
                            android:textColor="#fffd8001"
                            android:text="Ищу:"
                            android:id="@+id/composite_contact_search_search"
                            android:layout_gravity="left|center_vertical"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:text="не уствновлено"
                            android:id="@+id/textView4"
                            android:layout_gravity="left|center_vertical"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/contact_ley_bg"
                        android:layout_below="@+id/linearLayout4"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/linearLayout5">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Цели знакомства:"
                            android:layout_marginTop="2dp"
                            android:textSize="20dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fffd8001"
                            android:id="@+id/composite_contact_search_cel"
                            android:layout_gravity="left|center_vertical"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="не уствновлено"
                            android:layout_marginTop="2dp"
                            android:textSize="20dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fff"
                            android:id="@+id/textView5"
                            android:layout_gravity="left|center_vertical"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/contact_ley_bg"
                        android:layout_below="@+id/linearLayout5"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/linearLayout6">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Семейное положение:"
                            android:textSize="20dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fffd8001"
                            android:id="@+id/composite_contact_search_semya"
                            android:layout_gravity="left|center_vertical"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/contact_ley_bg"
                        android:layout_below="@+id/linearLayout6"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/linearLayout7">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Хобби:"
                            android:textSize="20dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fffd8001"
                            android:id="@+id/composite_contact_search_hobby"
                            android:layout_gravity="left|center_vertical"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="не уствновлено"
                            android:textSize="20dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fff"
                            android:id="@+id/textView6"
                            android:layout_gravity="left|center_vertical"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/contact_ley_bg"
                        android:layout_below="@+id/linearLayout7"
                        android:id="@+id/linearLayout8"
                        android:layout_centerHorizontal="true">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Любимая музыка:"
                            android:textSize="20dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fffd8001"
                            android:id="@+id/composite_contact_search_music"
                            android:layout_gravity="left|center_vertical"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Доши"
                            android:textSize="20dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fff"
                            android:id="@+id/textView8"
                            android:layout_gravity="left|center_vertical"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:background="@drawable/contact_ley_bg"
                        android:layout_below="@+id/linearLayout8"
                        android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="О себе:"
                        android:textSize="20dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fffd8001"
                        android:id="@+id/composite_contact_search_about"
                        android:layout_gravity="left|center_vertical"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="крутой"
                            android:textSize="20dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fff"
                            android:id="@+id/textView9"
                            android:layout_gravity="left|center_vertical"/>

                </LinearLayout>

            </RelativeLayout>

    </ScrollView>


</RelativeLayout>