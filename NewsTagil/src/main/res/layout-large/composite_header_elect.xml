<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/first_header_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/header_elect_back_button"
                style="?android:attr/buttonStyleSmall"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_width="42dp"
                android:layout_height="36dp"
                android:background="@drawable/back_header_button"
                android:text="" />


            <TextView
                    android:id="@+id/header_elect_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="Избранное"
                    android:textSize="22dp"
                    android:textColor="#4D433A" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                
                <ImageView
                android:id="@+id/second_header_cloud"
                android:layout_width="46dp"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/first_header_cloud" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    
                    <TextView
                        android:id="@+id/header_elect_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:text="сейчас:"
                        android:textColor="#FC8000"
                        android:textSize="16dp" />

                   <TextView
                        android:id="@+id/header_elect_tomorrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:textSize="16dp"
                        android:textColor="#fff"
                        android:text="завтра:" />
                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/header_elect_search"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/first_header_search" >
				
                <requestFocus />
            </EditText>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>