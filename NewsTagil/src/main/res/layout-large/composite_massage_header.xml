<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/massage_header_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/composite_massage_header_dialogs_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Диалоги"
                android:textSize="22dp"
                android:textColor="#4D433A" />

            <Button
                android:id="@+id/composite_massage_header_ref_button"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="38dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/first_header_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="133dp"
                android:layout_height="75dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/header_img_cloud"
                    android:layout_width="46dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/first_header_cloud" />

                

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/composite_massage_header_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:text="сейчас:"
                        android:textColor="#FC8000"
                        android:textSize="16dp" />

                   <TextView
                        android:id="@+id/composite_massage_header_tomorrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:textSize="16dp"
                        android:textColor="#fff"
                        android:text="завтра:" />
                    
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >



            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical">

                <Button
                        android:id="@+id/composite_massage_header_back_button"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="1dp"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:background="@drawable/back_header_button"
                        android:text="" />



            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>