<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ECE8E2"
   >


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:background="#fffd8001"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Автообновление"
                android:textSize="16dp"
                android:textColor="#ff474747"
                android:id="@+id/textView"
                android:layout_gravity="center"/>
    </LinearLayout>
    <RadioGroup android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:id="@+id/autoupdate_mode_selector"
            >

        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_img"
                style="@android:style/Widget.CompoundButton.CheckBox"
                android:text="EDGE/3G"
                android:paddingLeft="@dimen/margin_left"
                android:textColor="#ff474747"
                android:id="@+id/setting_content_edge"
                android:layout_gravity="left|center_vertical"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_img"
                android:text="WIFI"
                android:paddingLeft="@dimen/margin_left"
                style="@android:style/Widget.CompoundButton.CheckBox"
                android:textColor="#ff474747"
                android:id="@+id/setting_content_wifi"
                android:layout_gravity="left|center_vertical"/>
</RadioGroup>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/autoupdate_mode_selector"
            android:background="#fffd8001"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout2">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Поддержка"
                android:textSize="16dp"
                android:textColor="#ff474747"
                android:id="@+id/textView"
                android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_img"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout3">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Настройка шрифтов"
                android:textSize="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:textColor="#ff474747"
                android:id="@+id/setting_content_font_setting"
                android:layout_gravity="left"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_img"
            android:layout_below="@+id/linearLayout3"
            android:layout_centerHorizontal="true">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textSize="16dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Справка"
                android:textColor="#ff474747"
                android:id="@+id/setting_content_FAQ"
                android:layout_gravity="left"/>
    </LinearLayout>


</RelativeLayout>