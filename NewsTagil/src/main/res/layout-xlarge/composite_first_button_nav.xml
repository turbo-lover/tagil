<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:paddingLeft="0dp" >

    <ImageView
            android:id="@+id/first_tape_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/first_test"
            android:background="@color/lightGray"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/first_dialogs_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/first_test_second"
            android:background="@color/lightGray"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/first_elect_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/first_nav_elect"
            android:background="@color/lightGray"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/first_useful_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/first_nav_useful"
            android:background="@color/lightGray"
            android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/first_setting_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/first_nav_settings"
            android:background="@color/lightGray"
            android:scaleType="fitXY"/>
 </LinearLayout>
