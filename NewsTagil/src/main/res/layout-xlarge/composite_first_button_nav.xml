<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:paddingLeft="0dp" >

    <Button
            android:id="@+id/first_tape_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/first_test"/>

        <Button
            android:id="@+id/first_dialogs_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/first_test_second" />

        <Button
            android:id="@+id/first_elect_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/first_nav_elect" />

        <Button
            android:id="@+id/first_useful_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/first_nav_useful" />

        <Button
            android:id="@+id/first_setting_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/first_nav_settings" />
 </LinearLayout>
