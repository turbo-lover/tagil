<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/AppBackground">
    <ImageView android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/composite_contact_preview_img">
               </ImageView>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/composite_contact_preview_textView"
              android:layout_toRightOf="@+id/composite_contact_preview_img"
              android:layout_alignBottom="@+id/composite_contact_preview_img"
              android:layout_marginLeft="15dp"
              android:layout_marginBottom="20dp">

    </TextView>
</RelativeLayout>