<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    >

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/setting_header_bg"
            android:orientation="vertical" >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

            <Button
                    android:id="@+id/composite_header_simple_back_button"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:background="@drawable/back_header_button"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="" />


            <Button
                    android:id="@+id/composite_header_simple_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/Transparent"
                    android:textColor="#4D433A"
                    android:layout_toRightOf="@+id/composite_header_simple_back_button"
                    android:layout_alignBaseline="@+id/composite_header_simple_back_button"/>

            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/first_header_button"
                    android:layout_marginRight="15dp"
                    android:id="@+id/composite_header_simple_update"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/composite_header_simple_back_button"/>


        </RelativeLayout>

        <LinearLayout
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                <ImageView
                        android:id="@+id/second_header_cloud"
                        android:layout_width="32dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/first_header_cloud" />

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" >

                    <TextView
                            android:id="@+id/composite_header_simple_text_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:text="сейчас:"
                            android:textColor="#FC8000"
                            android:textSize="10dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"/>

                    <TextView
                            android:id="@+id/composite_header_simple_weather_now"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FC8000"
                            android:textSize="10dp"
                            android:layout_toRightOf="@+id/composite_header_simple_text_today"
                            android:layout_alignBottom="@+id/composite_header_simple_text_today"
                            android:layout_marginLeft="5dp"/>

                    <TextView
                            android:id="@+id/composite_header_simple_text_tomorrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:textSize="10dp"
                            android:textColor="#fff"
                            android:text="завтра:"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/composite_header_simple_text_today"/>

                    <TextView
                            android:id="@+id/composite_header_simple_weather_tomorrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FC8000"
                            android:textSize="10dp"
                            android:layout_toRightOf="@+id/composite_header_simple_text_tomorrow"
                            android:layout_alignBottom="@+id/composite_header_simple_text_tomorrow"
                            android:layout_marginLeft="5dp"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>