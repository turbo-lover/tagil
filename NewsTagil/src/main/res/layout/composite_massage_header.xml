<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="111dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/massage_header_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/dialogs_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:text="Диалоги"
                android:textColor="#4D433A" />

            <Button
                android:id="@+id/ref_button"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="217dp"
                android:background="@drawable/first_header_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/header_img_cloud"
                    android:layout_width="32dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/first_header_cloud" />

                

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:text="сейчас:"
                        android:textColor="#FC8000"
                        android:textSize="10dp" />

                   <TextView
                    android:id="@+id/tomorrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:textSize="10dp"
                    android:textColor="#fff"
                    android:text="завтра:" /> 
                    
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >



            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center_vertical">

                <Button
                        android:id="@+id/second_header_back_button"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:background="@drawable/back_header_button"
                        android:text="" />



            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>