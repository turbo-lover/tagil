<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="@color/AppBackground"
   >

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/composite_message_datetime_holder"
            android:id="@+id/composite_message_text_holder"
            android:background="@drawable/massage_bg"
            >


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/composite_message_login"
                />

        <ru.news.tagil.utility.myTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/composite_message_login"
                android:layout_alignLeft="@+id/composite_message_login"
                android:layout_marginTop="5dp"
                android:id="@+id/composite_message_text"
                />
    </RelativeLayout>


    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignBottom="@+id/composite_message_text_holder"
                    android:id="@+id/composite_message_datetime_holder"
                    android:paddingRight="5dp"
                    android:paddingLeft="3dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Orange"
                android:layout_marginLeft="3dp"
                android:textSize="10dp"
                android:id="@+id/composite_message_date"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Orange"
                android:layout_marginLeft="3dp"
                android:textSize="10dp"
                android:id="@+id/composite_message_time"
                android:layout_below="@+id/composite_message_date"
                />
    </RelativeLayout>
</RelativeLayout>